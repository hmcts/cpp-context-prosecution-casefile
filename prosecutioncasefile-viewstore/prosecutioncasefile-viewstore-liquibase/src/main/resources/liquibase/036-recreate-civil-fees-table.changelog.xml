<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="36" author="prosecutioncasefile"
               logicalFilePath="liquibase/036-recreate-civil-fees-table.changelog.xml">

        <dropTable tableName="CIVIL_FEES"/>

        <createTable tableName="CIVIL_FEE">
            <column name="fee_id" type="UUID">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="case_id" type="UUID"/>
            <column name="fee_type" type="VARCHAR(50)"/>
            <column name="fee_status" type="VARCHAR(50)"/>
            <column name="payment_reference" type="VARCHAR(500)"/>
        </createTable>

        <rollback>
            <dropTable tableName="CIVIL_FEE"/>
            <createTable tableName="CIVIL_FEES">
                <column name="fee_id" type="UUID">
                    <constraints nullable="false" primaryKey="true"/>
                </column>
                <column name="case_id" type="UUID"/>
                <column name="fee_type" type="text"/>
                <column name="fee_status" type="text"/>
                <column name="payment_reference" type="text"/>
            </createTable>
        </rollback>
    </changeSet>

</databaseChangeLog>