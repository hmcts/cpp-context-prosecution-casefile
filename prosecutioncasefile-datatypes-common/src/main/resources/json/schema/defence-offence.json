{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/cps/prosecutioncasefile/offence.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "policeOffenceId": {
      "type": "string"
    },
    "cpr": {
      "type": "object",
      "id": "http://justice.gov.uk/cps/prosecutioncasefile/cpr",
      "properties": {
        "defendantOffender": {
          "type": "object",
          "id": "http://justice.gov.uk/cps/prosecutioncasefile/defendantOffender",
          "properties": {
            "year": {
              "type": "string"
            },
            "organisationUnit": {
              "type": "string"
            },
            "number": {
              "type": "string"
            },
            "checkDigit": {
              "type": "string"
            }
          },
          "required": [
            "year",
            "organisationUnit",
            "number",
            "checkDigit"
          ]
        },
        "cjsCode": {
          "type": "string"
        },
        "offenceSequence": {
          "type": "string"
        }
      },
      "required": [
        "defendantOffender",
        "cjsCode",
        "offenceSequence"
      ]
    },
    "asnSequenceNumber": {
      "type": "string"
    },
    "cjsCode": {
      "type": "string"
    },
    "reason": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "wording": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "arrestDate": {
      "type": "string"
    },
    "startDate": {
      "type": "string"
    },
    "endDate": {
      "type": "string",
      "pattern": "^((([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13578]|1[02])\\-(0[1-9]|[12]\\d|3[01]))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13456789]|1[012])\\-(0[1-9]|[12]\\d|30))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-02\\-(0[1-9]|1\\d|2[0-8]))|(((1[6-9]|[2-9]\\d)(0[48]|[2468][048]|[13579][26])|((16|[2468][048]|[3579][26])00))\\-02\\-29))$"
    },
    "chargeDate": {
      "type": "string"
    },
    "maxPenalty": {
      "description": "Max penalty of offence",
      "type": "string"
    }
  },
  "required": [
    "id",
    "policeOffenceId",
    "cpr",
    "asnSequenceNumber",
    "cjsCode",
    "description",
    "wording",
    "category",
    "startDate"
  ]
}