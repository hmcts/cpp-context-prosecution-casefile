<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="prosecutioncasefile" logicalFilePath="liquibase/prosecutioncasefile-viewstore-db-changelog.xml">
        <createTable tableName="OFFENCE">
            <column name="offence_id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="arrest_date" type="date"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="charge_date" type="date"/>
            <column name="code" type="VARCHAR(255)"/>
            <column name="count" type="INT"/>
            <column name="cpr_defendant_offender_check_digit" type="VARCHAR(255)"/>
            <column name="cpr_defendant_offender_number" type="VARCHAR(255)"/>
            <column name="cpr_defendant_offender_organisation_unit" type="VARCHAR(255)"/>
            <column name="cpr_defendant_offender_year" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="end_date" type="date"/>
            <column name="indicated_plea" type="VARCHAR(255)"/>
            <column name="order_index" type="INT"/>
            <column name="plea" type="VARCHAR(255)"/>
            <column name="police_offence_id" type="VARCHAR(255)"/>
            <column name="reason" type="VARCHAR(255)"/>
            <column name="section" type="VARCHAR(255)"/>
            <column name="seq_no" type="INT"/>
            <column name="start_date" type="date"/>
            <column name="wording" type="VARCHAR(255)"/>
            <column name="defendant_id" type="UUID"/>
        </createTable>
    </changeSet>

</databaseChangeLog>