{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/prosecution/casefile/json/schemas/hearingRequest.json",
  "description": "The details of a court hearing that is requested during initiation of court proceedings for an application",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingDateTimeType": {
      "$ref": "http://cpp.moj.gov.uk/prosecution/casefile/json/schemas/pcf-definitions.json#/definitions/hearingDateTimeType"
    },
    "hearingType": {
      "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "listedStartDateTime": {
      "description": "The date and time that has been pre-arranged and therefore must be listed accordingly.",
      "type": "string",
      "format": "date-time"
    },
    "earliestStartDateTime": {
      "description": "The date before which a hearing must NOT be listed",
      "type": "string",
      "format": "date-time"
    },
    "endDate": {
      "description": "The requested end date of a hearing",
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "weekCommencingDate": {
      "$ref": "http://justice.gov.uk/core/courts/weekCommencingDate.json"
    },
    "bookedSlots": {
      "description": "Booked Magistrate's slots in Rota schedules.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/rotaSlot.json"
      }
    },
    "estimatedMinutes": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/positiveInteger"
    },
    "courtCentre": {
      "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
    },
    "listingDirections": {
      "type": "string"
    },
    "judiciary": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/judicialRole.json"
      }
    },
    "estimatedDuration": {
      "description": "Value from the Estimated Duration prompt",
      "type": "string"
    },
    "listDefendantRequests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://cpp.moj.gov.uk/prosecution/casefile/json/schemas//listDefendantRequest.json"
      }
    },
    "bookingType": {
      "description": "A choice of in-court, or video conference options",
      "type": "string"
    },
    "priority": {
      "description": "Priority marking on hearings/cases",
      "type": "string"
    },
    "specialRequirements": {
      "description": "Special requirements on hearings/cases",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "nonDefaultDays": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/nonDefaultDay.json#"
      }
    }
  },
  "required": [
    "hearingDateTimeType"
  ],
  "additionalProperties": false
}