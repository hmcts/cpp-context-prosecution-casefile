{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/prosecution/casefile/application/json/schemas/court-application-case.json",
  "description": "The details of any cases that are linked to a court application",
  "type": "object",
  "properties": {
    "caseURN": {
      "description": "The SPI-IN URN for the associated Case",
      "type": "string"
    },
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "prosecutorOuCode": {
      "description": "The OU Code for the Prosecuting Authority of the Case",
      "type": "string"
    },
    "isSJP": {
      "type": "boolean"
    },
    "prosecutionCaseIdentifier": {
      "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
    },
    "caseStatus": {
      "description": "case status",
      "type": "string"
    },
    "offences": {
      "description": "The details of teh offences that are being dealt with/considered as part of this application",
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/offence.json"
      }
    }
  },
  "required": [
    "caseURN",
    "prosecutorOuCode"
  ],
  "additionalProperties": false
}