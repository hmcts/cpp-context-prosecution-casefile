{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cps/prosecutioncasefile/domain/event/public.prosecutioncasefile.cps-serve-pet-submitted.json",
  "type": "object",
  "properties": {
    "submissionId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseId": {
      "description": "Case Id",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "petDefendants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "defendantId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "cpsDefendantId": {
            "type": "string"
          }
        },
        "required": [
          "defendantId"
        ],
        "additionalProperties": false
      }
    },
    "petFormData": {
      "description": "Pet Form Data",
      "type": "string"
    },
    "userName" : {
      "type": "string",
      "minLength": 1,
      "maxLength": 175
    },
    "isYouth": {
      "description": "Is Youth",
      "type": "boolean"
    }
  },
  "required": [
    "caseId",
    "petDefendants",
    "userName",
    "isYouth"
  ],
  "additionalProperties": false
}
