  "description": "The type of verdict i.e. the type of court decision",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "category": {
      "type": "string"
    },
    "categoryType": {
      "type": "string"
    },
    "description": {
      "type": "string"
    }
  },
