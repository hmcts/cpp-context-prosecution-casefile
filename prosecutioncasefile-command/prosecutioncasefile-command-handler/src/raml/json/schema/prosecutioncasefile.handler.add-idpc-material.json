{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cps/prosecutioncasefile/command/handler/add-idpc-material.json",
  "type": "object",
  "properties": {
    "fileServiceId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "transactionId": {
      "type": "string"
    },
    "caseUrn": {
      "type": "string",
      "maxLength": 36
    },
    "responseEmail": {
      "type": "string"
    },
    "materialType": {
      "type": "string"
    },
    "defendant": {
      "type": "object",
      "properties": {
        "defendantId": {
          "type": "string",
          "maxLength": 36
        },
        "surname": {
          "type": "string"
        },
        "Forenames": {
          "type": "string"
        },
        "DOB": {
          "type": "string"
        },
        "oucode": {
          "type": "string"
        }
      },
      "required": [
        "surname"
      ]
    }
  },
  "required": [
    "fileServiceId",
    "caseId",
    "caseUrn",
    "materialType",
    "defendant"
  ],
  "additionalProperties": true
}