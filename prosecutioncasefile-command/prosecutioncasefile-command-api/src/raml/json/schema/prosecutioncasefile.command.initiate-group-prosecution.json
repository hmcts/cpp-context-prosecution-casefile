{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cps/prosecutioncasefile/command/api/initiate-group-prosecution.json",
  "type": "object",
  "properties": {
    "groupProsecutions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "caseDetails": {
            "$ref": "http://cpp.moj.gov.uk/prosecution/casefile/json/schemas/case-details.json"
          },
          "defendants": {
            "type": "array",
            "items": {
              "$ref": "http://cpp.moj.gov.uk/prosecution/casefile/json/schemas/defendant.json"
            }
          },
          "groupId": {
            "description": "Indicates the Staging.CivilProsecutor assigned group id for bulk cases",
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "isCivil": {
            "description": "Marker to indicate that MoJ offence reference data should be used as opposed to criminal offence reference data",
            "type": "boolean"
          },
          "isGroupMember": {
            "description": "Indicates if a case is part of a group of cases within the hearing",
            "type": "boolean"
          },
          "isGroupMaster": {
            "description": "Indicates which case within a group (isGroupMember = true) is the master and should be returned by the backend to the UI",
            "type": "boolean"
          },
          "paymentReference": {
            "description": "Indicates payment reference number",
            "type": "string"
          }
        }
      },
      "required": [
        "caseDetails",
        "defendants",
        "groupId",
        "isCivil",
        "isGroupMember",
        "isGroupMaster",
        "paymentReference"
      ],
      "additionalProperties": false
    },
    "channel": {
      "type": "string",
      "$ref": "http://cpp.moj.gov.uk/prosecution/casefile/json/schemas/pcf-definitions.json#/definitions/channel"
    },
    "externalId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid",
      "description": "ID originating from the client (Civil) for referencing the original message"
    }
  },
  "required": [
    "groupProsecutions",
    "channel"
  ]
}
