  "type": "object",
  "properties": {
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid",
      "description": "The Id of the case to accept"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "personDetails": {
      "$ref": "http://cpp.moj.gov.uk/prosecution/casefile/json/schemas/personal-information.json"
    },
    "dateOfBirth": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/date"
    },
    "organisationName": {
      "type": "string"
    }
  },
  "oneOf": [
    {
      "required": [
        "defendantId",
        "personDetails"
      ]
    },
    {
